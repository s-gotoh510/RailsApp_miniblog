<h2 class="h3 mb-4">※「<%= @bloggenre.name %>」</h2>
<% @blogposts.each do |blogpost| %>
  <h4><a href="/blogs/<%= blogpost.id %>/show"><%= blogpost.title %></a></h4>
  <p><%= blogpost.lead %><span class="created">(<%= blogpost.created_at.to_s(:datetime_jp) %>)</span></p>  
  <hr>
<% end %>

<div class="navigate mt-4">
  <div><%= paginate @blogposts %></div>
</div>